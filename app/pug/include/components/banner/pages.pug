mixin top-section(imageName, opacity)
	.carousel.slide#carouselSlidesOnly.pages(data-ride="carousel")
		.carousel-inner
			.carousel-item.active
				.item(class=opacity ? '' : 'blur', style="background-image: url(" + imageName + "); background-size: cover; background-position: center;")
					.mask.dark(class=opacity ? 'opacity' : '')